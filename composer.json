{
    "name": "clagiordano/weblibs-mvc",
    "description": "weblibs-mvc is an simple and lightweight php routing component.",
    "type": "library",
    "homepage": "https://github.com/clagiordano/weblibs-mvc.git",
    "license": "MIT",
    "keywords": ["clagiordano", "weblibs", "mvc", "routing", "framework", "api", "restful"],
    "authors": [
        {
            "name": "Claudio Giordano",
            "email": "claudio.giordano@autistici.org",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=5.4",
        "psr/http-message": "^1.0",
        "psr/container": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "4.8",
        "clagiordano/phpunit-result-printer": "^1.0"
    },
    "conflict": {
        "phpunit/php-timer": ">=2"
    },
    "autoload": {
        "psr-4": {
            "clagiordano\\weblibs\\mvc\\": "src/"            
        }
    },
    "autoload-dev": {
        "psr-4": {
            "clagiordano\\weblibs\\mvc\\tests\\": "tests/"            
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit --no-coverage",
        "test-full": "./vendor/bin/phpunit",
        "phpmd": "phpmd",
        "phpcs": "phpcs"
    }
}
